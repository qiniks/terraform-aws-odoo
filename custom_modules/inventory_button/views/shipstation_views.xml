<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shipstation Option List View -->
    <record id="view_shipstation_option_tree" model="ir.ui.view">
        <field name="name">shipstation.option.tree</field>
        <field name="model">shipstation.option</field>
        <field name="arch" type="xml">
            <tree editable="bottom" delete="1">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    
    <!-- Shipstation Option Form View -->
    <record id="view_shipstation_option_form" model="ir.ui.view">
        <field name="name">shipstation.option.form</field>
        <field name="model">shipstation.option</field>
        <field name="arch" type="xml">
            <form delete="1">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Shipstation Action -->
    <record id="action_shipstation_options" model="ir.actions.act_window">
        <field name="name">Shipstation Options</field>
        <field name="res_model">shipstation.option</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new shipstation option
            </p>
            <p>
                Define shipstation options that can be selected when sending products.
            </p>
        </field>
    </record>
    
    <!-- Menu Item -->
    <menuitem id="menu_shipstation_options" 
              name="Shipstations"
              parent="stock.menu_stock_config_settings"
              action="action_shipstation_options"
              sequence="100"/>
</odoo>
